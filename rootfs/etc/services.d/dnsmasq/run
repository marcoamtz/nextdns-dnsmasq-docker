#!/command/with-contenv sh
# dnsmasq service - starts as root, drops privileges via config
# Logs are handled by s6-log via the log/ subdirectory
# Waits for nextdns readiness via dependencies.d/nextdns

DNSMASQ_VERSION=$(dnsmasq --version 2>/dev/null | head -n1 | awk '{print $3}' || echo "unknown")
echo "Starting dnsmasq version ${DNSMASQ_VERSION}..." >&2

exec dnsmasq -k --log-facility=-
